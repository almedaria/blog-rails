<h1>Hello World </h1>

<p>This is coming from articles#index</p>

<table>
    <thread>
        <tr>
            <th>Titile</th>
            <th>Author</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thread>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td> <%= article.title %> </td>
            <td> <%= article.author %> </td>
            <td> <%= article.content.truncate(100) %> </td>
            <td> <%= link_to edit_article_path(article.id) do %> 
            Edit 
            <%end%> 
            
                 <%= link_to article_path(article.id), method: :delete, data: {confirm: "Are you sure?" } do %> 
            Delete <%end%> 

            </td>
            
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Article', new_article_url %>

